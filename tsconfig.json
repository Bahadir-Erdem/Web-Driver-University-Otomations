{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    },
    "types": ["node", "@cucumber/cucumber"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}